<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/buttonGetApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fazer requisição"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Resultado"
        app:layout_constraintEnd_toEndOf="@+id/buttonGetApi"
        app:layout_constraintStart_toStartOf="@+id/buttonGetApi"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetApi" />
</androidx.constraintlayout.widget.ConstraintLayout>